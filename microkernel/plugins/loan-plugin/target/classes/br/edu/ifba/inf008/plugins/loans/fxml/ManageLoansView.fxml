<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifba.inf008.plugins.loans.controller.ManageLoansController">
    <top>
        <Label text="Loan Management" BorderPane.alignment="CENTER">
            <font><Font name="System Bold" size="18.0" /></font>
            <padding><Insets bottom="10.0" top="10.0" /></padding>
        </Label>
    </top>
    <center>
        <TableView fx:id="loansTable">
            <columns>
                <TableColumn fx:id="loanIdColumn" text="ID" prefWidth="50.0">
                    <cellValueFactory><PropertyValueFactory property="id" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="bookTitleColumn" text="Book" prefWidth="250.0">
                    <cellValueFactory><PropertyValueFactory property="bookTitle" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="userNameColumn" text="User" prefWidth="250.0">
                    <cellValueFactory><PropertyValueFactory property="userName" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="loanDateColumn" text="Loan Date" prefWidth="120.0">
                    <cellValueFactory><PropertyValueFactory property="loanDate" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="returnDateColumn" text="Return Date" prefWidth="120.0">
                    <cellValueFactory><PropertyValueFactory property="returnDate" /></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    <bottom>
        <GridPane hgap="10" vgap="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
            <Label text="Select Book:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <ComboBox fx:id="bookComboBox" prefWidth="250.0" promptText="Choose a book..." GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Select User:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <ComboBox fx:id="userComboBox" prefWidth="250.0" promptText="Choose a user..." GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Button onAction="#registerLoan" text="Register Loan" GridPane.rowIndex="1" GridPane.columnIndex="2" />
            <Button onAction="#confirmReturn" text="Confirm Return" GridPane.rowIndex="1" GridPane.columnIndex="3" />
        </GridPane>
    </bottom>
</BorderPane>